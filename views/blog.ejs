<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title%>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="" width="700">
            <p class="mt-3">
                <%= blog.body %>
            </p>
        </div>


        
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px" alt="">

            <%= blog.createdBy.fullName %>
        </div>


        <div class="container mt-3">
            <% if (locals.user) { %>
                <h1>Comments (<%= comments.length %>)</h1>
            <form action="/blog/comment/<%= blog._id %>" method="post">

                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">

                <button type="submit" class="btn btn-sm btn-primary mt-4">Add a Comment</button>
                   
            </form>
           
           <% } %>

           <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div>
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="">
                <%= comment.createdBy.fullName %>:<pre><%= comment.content %></pre>
             </div>
            <% }) %>
        </div>
        </div>

        <%- include('./partials/scripts') %>

</body>

</html>